@page
@model Seniorfolk.Pages.CSurveyModel
@{
    ViewData["Title"] = "Survey Feedback";
}

<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row justify-content-center align-items-center h-100">
            <div class="col-12 col-lg-9 col-xl-7">
                <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                    <div class="card-body p-4 p-md-5">
                        <h3>Survey Feedback</h3>
                        <form method="post">

                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <label class="form-label">ID:</label>
                                        <input asp-for="MySurvey.Surveyid" class="form-control form-control-lg" />
                                        <span asp-validation-for="MySurvey.Surveyid" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <label class="form-label">Title:</label>
                                        <input asp-for="MySurvey.Title" class="form-control form-control-lg" />
                                        <span asp-validation-for="MySurvey.Title" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <label class="form-label">Suggestions/Feedback:</label>
                                        <input asp-for="MySurvey.Suggestions" class="form-control form-control-lg" />
                                        <span asp-validation-for="MySurvey.Suggestions" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="d-flex justify-content-center">
                                <input id="createSurvey" type="submit" value="Submit" class="btn btn-primary" />
                            </div>

                        </form>
                        @section Scripts {
                            @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
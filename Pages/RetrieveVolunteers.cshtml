@page
@model Seniorfolk.Pages.RetrieveVolunteersModel
@{
    ViewData["Title"] = "RetrieveVolunteers";
}

<div class="text-center">
    
    <h3>List of Voluntary Work</h3>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.allvolunteers[0].Id)</th>
            <th></th>
            <th>@Html.DisplayNameFor(model => model.allvolunteers[0].OrganisationName)</th>
            <th></th>

            
        </tr>
    </thead>
    <tbody>



        @{
            if (Model.allvolunteers != null)
            {
                @foreach (var item in Model.allvolunteers)
                {
                    <tr>
                        <td>@item.Id</td>

                        <td><img src="~/images/Willing-Hearts-logo (1).png" /></td>

                        <td>@item.OrganisationName</td>



                        <td>

                            <a asp-page="/ViewVoluntary" asp-route-id="@item.Id"> View Details</a>
                            <a asp-page="/Application" asp-route-id="@item.Id">  | Apply</a>

                        </td>

                    </tr>
                }
            }
        }




    </tbody>
</table>

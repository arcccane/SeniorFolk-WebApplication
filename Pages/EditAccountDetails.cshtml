@page
@using Seniorfolk.Models;
@model Seniorfolk.Pages.EditAccountDetailsModel
@{
    ViewData["Title"] = "Account Details";
}

<h1>Edit User Details</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MyUser.Id" />

            <div class="form-group">
                <label asp-for="MyUser.Name" class="control-label"></label>
                <input asp-for="MyUser.Name" class="form-control" />
                <span asp-validation-for="MyUser.Name" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label class="control-label">Gender:</label>
                @Html.RadioButton("MyUser.Gender", "M") <span>Male</span>
                @Html.RadioButton("MyUser.Gender", "F") <span>Female</span>
                <span asp-validation-for="MyUser.Gender" class="text-danger"></span>
            </div>




            <div class="form-group">
                <label class="control-label">Date of Birth</label>
                <input asp-for="MyUser.DOB" class="form-control" />
                <span asp-validation-for="MyUser.DOB" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="MyUser.Email" class="control-label"></label>
                <input asp-for="MyUser.Email" class="form-control" />
                <span asp-validation-for="MyUser.Email" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="MyUser.Mobile" class="control-label"></label>
                <input asp-for="MyUser.Mobile" class="form-control" />
                <span asp-validation-for="MyUser.Mobile" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MyUser.Password" class="control-label"></label>
                <input asp-for="MyUser.Password" class="form-control" />
                <span asp-validation-for="MyUser.Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />&nbsp;
                <a asp-page="./RetrieveAccounts" class="btn btn-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }

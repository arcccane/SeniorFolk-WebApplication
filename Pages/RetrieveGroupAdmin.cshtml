@page
@model Seniorfolk.Pages.RetrieveGroupAdminModel
@{
}
@{
    ViewData["Title"] = "Retrieve Group - Admin";
}

<div class="text-center">
</div>
    <h3>List of Groups</h3>
<br />

<table class="table table-hover">
    <thead>
        <tr>
            <th>Group ID</th>
            <th>Group Name</th>
            <th>Group Description</th>
            <th>Users</th>
            <th>Hashtag</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{ if (Model.allgroups != null)
            {
                @foreach (var item in Model.allgroups)
                {


                    <tr>
                        <td>@item.GroupId</td>
                        <td>@item.GroupName</td>
                        <td>@item.Description</td>
                        <td>@item.User</td>
                        <td>@item.Hashtag</td>


                        <td>

                            <br />
                            <form method="post">
                                <input type="hidden" asp-for="Id" value="@item.GroupId" />
                                <button type="submit">Delete</button>
                            </form>

                        </td>

                    </tr>
                }
            }
        }
    </tbody>
</table>
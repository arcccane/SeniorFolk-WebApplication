@page
@model Seniorfolk.Pages.RegisterModel
@{
    ViewData["Title"] = "Register";
}


<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row justify-content-center align-items-center h-100">
            <div class="col-12 col-lg-9 col-xl-7">
                <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                    <div class="card-body p-4 p-md-5">
                        <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Registration Form</h3>
                        <form method="post">

                            <div><label class="text-danger">@Model.MyMessage</label></div>
                            <div asp-validation-summary="All" class="text-danger"></div>

                            <div class="row">
                                <div class="col-md-6 mb-4">

                                    <div class="form-outline">
                                        <label class="form-label">User Name:</label>
                                        <input asp-for="MyUser.Id" class="form-control form-control-lg" />
                                        <span asp-validation-for="MyUser.Id" class="text-danger"></span>
                                    </div>

                                </div>
                                <div class="col-md-6 mb-4">

                                    <div class="form-outline">
                                        <label class="form-label">Full Name:</label>
                                        <input asp-for="MyUser.Name" class="form-control form-control-lg" />
                                        <span asp-validation-for="MyUser.Name" class="text-danger"></span>
                                    </div>

                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4 d-flex align-items-center">

                                    <div class="form-outline">
                                        <label class="form-label">Date of Birth:</label>
                                        <input asp-for="MyUser.DOB" class="form-control form-control-lg" />
                                        <span asp-validation-for="MyUser.DOB" class="text-danger"></span>
                                    </div>

                                </div>
                                <div class="col-md-6 mb-4">

                                    <div class="form-outline">
                                        <label class="form-label">Gender:</label>
                                        @Html.RadioButton("MyUser.Gender", "M") <span>Male</span>
                                        @Html.RadioButton("MyUser.Gender", "F") <span>Female</span>
                                    </div>

                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4 pb-2">

                                    <div class="form-outline">
                                        <label class="form-label">Email:</label>
                                        <input asp-for="MyUser.Email" class="form-control form-control-lg" />
                                        <span asp-validation-for="MyUser.Email" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4 pb-2">

                                    <div class="form-outline">
                                        <label class="form-label">Mobile:</label>
                                        <input asp-for="MyUser.Mobile" class="form-control form-control-lg" />
                                        <span asp-validation-for="MyUser.Mobile" class="text-danger"></span>
                                    </div>

                                </div>
                                <div class="col-md-6 mb-4 pb-2">

                                    <div class="form-outline">
                                        <label class="form-label">Password:</label>
                                        <input asp-for="MyUser.Password" class="form-control form-control-lg" />
                                        <span asp-validation-for="MyUser.Password" class="text-danger"></span>
                                    </div>

                                </div>
                            </div>

                            <div class="d-flex justify-content-center">
                                <input id="create" type="submit" value="Create" class="btn btn-primary" />
                            </div>

                            <p class="text-center text-muted mt-5 mb-0">Have already an account? <a href="../Login" class="fw-bold text-body"><u>Login here</u></a></p>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


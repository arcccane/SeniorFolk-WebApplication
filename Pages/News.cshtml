@page
@model Seniorfolk.Pages.NewsModel
@{
    ViewData["Title"] = "News";
}

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>News</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
</head>

<h5>News Section</h5>

<div class="search-container">
    <form action="">
        <input type="text" placeholder="Search..." name="q">
        <button type="submit"><i class="fa fa-search"></i></button>
    </form>
</div>

<div class="container-holder">
    <section class="blog-cat mt-5 pb-5">
        @{ if (Model.articleList != null)
            {
                @foreach (var article in Model.articleList)
                {
                    <div class="fullbar-item w-100 cursor-pointer" onclick="location.href='@article.Url'">
                        <div class="news-container">
                            <div class="row py-3 py-md-5 align-items-center border-top">
                                <div class="col-md-2">
                                    <img src="@article.UrlToImage" width="100" height="100" onclick="location.href='@article.Url'" />
                                </div>
                                <div class="col-md-10">
                                    <h3 class="feed-item-heading m-0 font-weight-800">
                                        <a class="text-black" href="@article.Url">@article.Title</a>
                                    </h3>
                                </div>
                                <div class="col-md-2">
                                    <p class="m-0 text-pink text-uppercase">@article.PublishedAt</p>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <p class="no-posts">Sorry... there are no results available.</p>
            }
        }
    </section>

    <div class="settings-container">
        <table>
            <tr>
                <td><a asp-page="CreateContent"><input type="button" class="btn btn-primary" value="Create Post" /></a></td>
            </tr>
            <tr>
                <td><a asp-page="Content"><input type="button" class="btn btn-primary" value="All Posts" /></a></td>
            </tr>
            <tr>
                <td><a asp-page="ViewContent"><input type="button" class="btn btn-primary" value="Your Posts" /></a></td>
            </tr>
            <tr>
                <td><a asp-page="News"><input type="button" class="btn btn-primary" value="News" /></a></td>
            </tr>
        </table>
    </div>
</div>

<button onclick="topFunction()" id="myBtn" title="Go to top"><i class="fas fa-chevron-up"></i></button>

<script>
    mybutton = document.getElementById("myBtn");

    window.onscroll = function () { scrollFunction() };

    function scrollFunction() {
        if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
            mybutton.style.display = "block";
        } else {
            mybutton.style.display = "none";
        }
    }

    function topFunction() {
        document.body.scrollTop = 0;
        document.documentElement.scrollTop = 0;
    }
</script>

<style>

    .container-holder {
        width: 100%;
        height: auto;
        display: inline-block;
    }

    section {
        font: bold 13px Helvetica, Arial, sans-serif;
        max-width: 600px;
        width: 90%;
        margin: 0;
        float: left;
    }

    .settings-container {
        margin-top: 20px;
        margin-left: 65%;
        max-width: 600px;
        height: 510px;
        border: 5px solid #9f5317;
        border-radius: 5px;
        background-color: antiquewhite;
    }

        .settings-container table {
            width: 100%;
            border-collapse: collapse;
        }

        .settings-container td {
            text-align: center;
            padding: 10px;
        }

            .settings-container td a input {
                width: 100%;
                height: 100%;
                padding: 10px;
            }

    @@media only screen and (max-width: 1000px) {

        .search-container {
            position: center;
            margin-top: 300px;
        }

        .settings-container {
            position: absolute;
            max-height: 275px;
            max-width: 550px;
            width: 550px;
            margin: 20px;
            top: 80px;
        }
    }

    .no-posts {
        padding: 50px 10px 30px 100px;
        text-align: center;
        color: black;
    }

    .text-pink {
        color: #f7008a !important;
    }

    .text-black {
        color: #000 !important;
    }

    .fullbar-item:hover {
        background: #ccc;
    }

    @@media screen and (max-width: 768px) {

        .feed-item-heading {
            font-size: 1.25rem !important;
        }
    }

    .search-container {
        float: left;
    }

    input[type=text] {
        padding: 6px;
        margin-top: 8px;
        font-size: 17px;
        border: none;
        border-radius: 10px 0px 0px 10px;
        max-width: 600px;
    }

    .search-container button {
        float: right;
        padding: 6px 10px;
        margin-top: 8px;
        margin-right: 16px;
        background: #ddd;
        font-size: 17px;
        border: none;
        border-radius: 0px 10px 10px 0px;
        cursor: pointer;
    }

        .search-container button:hover {
            background: #ccc;
        }

    #myBtn {
        display: none;
        position: fixed;
        bottom: 20px;
        right: 30px;
        z-index: 99;
        border: none;
        outline: none;
        background-color: rgba(64,153,255,.7);
        color: white;
        cursor: pointer;
        padding: 15px;
        border-radius: 10px;
        font-size: 18px;
    }

        #myBtn:hover {
            background-color: #555;
        }
</style>

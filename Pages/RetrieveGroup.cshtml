@page
@model Seniorfolk.Pages.RetrieveGroupModel
@{
}

@{
    ViewData["Title"] = "Retrieve Group";
}

<a class="nav-link text-dark" asp-area="" asp-page="/CreateGroup">Create Group</a>

<div class="text-center">
    <h3>List of Groups</h3>
</div>
<br />

<table class="table table-hover">
    <thead>
        <tr>
            <th>Group ID</th>
            <th>Group Name</th>
            <th>Group Description</th>
            <th>Created By</th>
            <th>Hashtag</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{ if (Model.allgroups != null)
            {
                @foreach (var item in Model.allgroups)
                {


                    <tr>
                        <td>@item.GroupId</td>
                        <td>@item.GroupName</td>
                        <td>@item.Description</td>
                        <td>@item.User</td>
                        <td>@item.Hashtag</td>


                        <td>
                            <a asp-page="/EditGroup" asp-route-id="@item.GroupId">Edit</a>
                            <br />
                            <form method="post">
                                <input type="hidden" asp-for="Id" value="@item.GroupId" />
                                <button type="submit">Delete</button>
                            </form>

                        </td>

                    </tr>
                }
            }
        }
    </tbody>
</table>
@page
@model Seniorfolk.Pages.AddFriendModel
@{
}
@{
    ViewData["Title"] = "Application";
}
<table class="table table-hover">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.allusers[0].Id)</th>
            <th>@Html.DisplayNameFor(model => model.allusers[0].Name)</th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @{ if (Model.allusers != null)
            {
                @foreach (var item in Model.allusers)
                {


                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>


                        <td>
                            <a asp-page="/ViewAccountDetails" asp-route-id="@item.Id">View</a>
                            <a asp-page="/RetrieveFriend" asp-route-id="@item.Id">| Add</a>

                        </td>

                    </tr>
                }
            }
        }
    </tbody>
</table>
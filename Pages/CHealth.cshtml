@page
@model Seniorfolk.Pages.CHealthModel
@{
    ViewData["Title"] = "Create Health Log";
}

<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row justify-content-center align-items-center h-100">
            <div class="col-12 col-lg-9 col-xl-7">
                <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                    <div class="card-body p-4 p-md-5">
                        <h3>Create Health Log</h3>
                        <form method="post">

                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <label class="form-label">ID:</label>
                                        <input asp-for="MyHealth.Idhealth" class="form-control form-control-lg"/>
                                        <span asp-validation-for="MyHealth.Idhealth" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <label class="form-label">Date:</label>
                                        <input asp-for="MyHealth.DateHealthLog" class="form-control form-control-lg"/>
                                        <span asp-validation-for="MyHealth.DateHealthLog" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <label class="form-label">BMI:</label>
                                        <input asp-for="MyHealth.Bmi" class="form-control form-control-lg"/>
                                        <span asp-validation-for="MyHealth.Bmi" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <h4>Blood Pressure:</h4>

                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <label class="form-label">Systolic BP (mmHg):</label>
                                        <input asp-for="MyHealth.SystolicBp" class="form-control form-control-lg"/>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <label class="form-label">Diastolic BP (mmHg):</label>
                                        <input asp-for="MyHealth.DiastolicBp" class="form-control form-control-lg"/>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <label class="form-label">Beats Per Min (B/min):</label>
                                        <input asp-for="MyHealth.BeatsPm" class="form-control form-control-lg"/>
                                    </div>
                                </div>
                            </div>

                            <h4>Blood Sugar Level:</h4>

                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <label class="form-label">Before Breakfast (mmol/L):</label>
                                        <input asp-for="MyHealth.BeforeBreakfast" class="form-control form-control-lg" />
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <label class="form-label">After Breakfast (mmol/L):</label>
                                        <input asp-for="MyHealth.AfterBreakfast" class="form-control form-control-lg" />
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <label class="form-label">Before Lunch (mmol/L):</label>
                                        <input asp-for="MyHealth.BeforeLunch" class="form-control form-control-lg" />
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <label class="form-label">After Lunch (mmol/L):</label>
                                        <input asp-for="MyHealth.AfterLunch" class="form-control form-control-lg" />
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <label class="form-label">Before Dinner (mmol/L):</label>
                                        <input asp-for="MyHealth.BeforeDinner" class="form-control form-control-lg" />                                        
                                    </div>                                      
                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <label class="form-label">After Dinner (mmol/L):</label>
                                        <input asp-for="MyHealth.AfterDinner" class="form-control form-control-lg" />
                                    </div>
                                </div>
                            </div>

                            <div class="d-flex justify-content-center">
                                <input id="cH" type="submit" value="Create" class="btn btn-primary" />
                            </div>

                        </form>
                        @section Scripts {
                            @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
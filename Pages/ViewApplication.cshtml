@page "{id}"
@model Seniorfolk.Pages.ViewApplicationModel
@{
    ViewData["Title"] = "ViewApplication";
}

<h1>Application Detail</h1>

<form method="post">

    <div>
        <label class="col-sm-2 col-form-label">User ID:</label>
        <label>@Model.MyApplication.Id</label>
    </div>

    <div>
        <label class="col-sm-2 col-form-label">Full Name:</label>
        <label>@Model.MyApplication.Name</label>
    </div>

    <div>
        <label class="col-sm-2 col-form-label">Gender:</label>
        <label>@Model.MyApplication.Gender</label>

    </div>


    <div>
        <label class="col-sm-2 col-form-label">Email:</label>
        <label>@Model.MyApplication.Email</label>
    </div>

    <div>
        <label class="col-sm-2 col-form-label">Mobile:</label>
        <label>@Model.MyApplication.Mobile</label>
    </div>

    <div>
        <label class="col-sm-2 col-form-label">Availability:</label>
        <label>@Model.MyApplication.Date</label>
    </div>


    <div class="col-sm-10">
        <a asp-page="./RetrieveApplication" class="btn btn-primary">Back to List</a>
        <input id="btn1" type="submit" value="Delete" class="btn btn-danger" />
    </div>
</form>
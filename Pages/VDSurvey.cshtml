@page
@model Seniorfolk.Pages.VDSurveyModel
@{
    ViewData["Title"] = "Survey Feedback Details";
}

<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row justify-content-center align-items-center h-100">
            <div class="col-12 col-lg-9 col-xl-7">
                <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                    <div class="card-body p-4 p-md-5">
                        <h3>Survey Feedback Details</h3>
                        <form method="post">

                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <label class="form-label">Title:</label>
                                        <label class="form-label">@Model.MySurvey.Title</label>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <label class="form-label">Suggestions/Feedback:</label>
                                        <label class="form-label">@Model.MySurvey.Suggestions</label>
                                    </div>
                                </div>
                            </div>

                            <div class="d-flex justify-content-center">
                                <input id="bVS" type="submit" value="Back" class="btn btn-primary" />
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
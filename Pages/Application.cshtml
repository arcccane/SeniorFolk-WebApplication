@page
@model Seniorfolk.Pages.ApplicationModel
@{
    ViewData["Title"] = "Application";
}

<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row justify-content-center align-items-center h-100">
            <div class="col-12 col-lg-9 col-xl-7">
                <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                    <div class="card-body p-4 p-md-5">
                        <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">You are signing up for: @Model.Orgname</h3>
                        <form method="post">

                            <div><label class="text-danger">@Model.MyMessage</label></div>
                            <div asp-validation-summary="All" class="text-danger"></div>

                            <div class="form-outline">
                                <input type="hidden" asp-for="MyApplication.OrgName" value="@Model.Orgname" class="form-control form-control-lg" />
                                @*<span type="hidden" asp-validation-for="MyApplication.OrgName" class="text-danger"></span>*@
                            </div>

                            <div class="form-outline">

                                <input type="hidden" asp-for="MyApplication.Status" value="Unconfirmed" class="form-control form-control-lg" />
                                <span asp-validation-for="MyApplication.Status" class="text-danger"></span>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4">

                                    <div class="form-outline">
                                        <label class="form-label">User Name:</label>
                                        <input asp-for="MyApplication.Id" class="form-control form-control-lg" />
                                        <span asp-validation-for="MyApplication.Id" class="text-danger"></span>
                                    </div>

                                </div>
                                <div class="col-md-6 mb-4">

                                    <div class="form-outline">
                                        <label class="form-label">Full Name:</label>
                                        <input asp-for="MyApplication.Name" class="form-control form-control-lg" />
                                        <span asp-validation-for="MyApplication.Name" class="text-danger"></span>
                                    </div>

                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4">

                                    <div class="form-outline">
                                        <label class="form-label">Mobile number:</label>
                                        <input asp-for="MyApplication.Mobile" class="form-control form-control-lg" />
                                        <span asp-validation-for="MyApplication.Mobile" class="text-danger"></span>
                                    </div>

                                </div>

                            </div>


                            <div class="row">
                                <div class="col-md-6 mb-4 d-flex align-items-center">

                                    <div class="form-outline">
                                        <label class="form-label">Email:</label>
                                        <input asp-for="MyApplication.Email" class="form-control form-control-lg" />
                                        <span asp-validation-for="MyApplication.Email" class="text-danger"></span>

                                    </div>



                                </div>
                                <div class="col-md-6 mb-4">

                                    <div class="form-outline">
                                        <label class="form-label">Gender:</label>
                                        @Html.RadioButton("MyApplication.Gender", "M") <span>Male</span>
                                        @Html.RadioButton("MyApplication.Gender", "F") <span>Female</span>
                                    </div>

                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4 pb-2">

                                    <div class="form-outline">
                                        <label class="form-label">Available Date:</label>
                                        <input asp-for="MyApplication.Date" class="form-control form-control-lg" />
                                        <span asp-validation-for="MyApplication.Date" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>



                            <div class="d-flex justify-content-center">
                                <input id="create" type="submit" value="Submit" class="btn btn-primary" />
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}



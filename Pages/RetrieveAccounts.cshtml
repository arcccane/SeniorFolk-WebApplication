@page
@model Seniorfolk.Pages.RetrieveAccountsModel
@{
    ViewData["Title"] = "Retrieve Accounts";
}

<div class="text-center">
    <h3>Welcome Admin @Model.Id</h3>

    <h3>List of Users</h3>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.allusers[0].Id)</th>
            <th>@Html.DisplayNameFor(model => model.allusers[0].Name)</th>
          
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{ if (Model.allusers != null)
            {
                @foreach (var item in Model.allusers)
                {


                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        


                        <td>
                            <a asp-page="/ViewAccountDetails" asp-route-id="@item.Id">View</a>
                            <a asp-page="/EditAccountDetails" asp-route-id="@item.Id">| Edit</a>

                        </td>

                    </tr>
                }
            }
        }
    </tbody>
</table>



